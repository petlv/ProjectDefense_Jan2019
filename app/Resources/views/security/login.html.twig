{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block body %}

    <h1 class="h5 mx-2 my-4">Login</h1>
    <hr />

    <form class="m-3 col-6" name="authenticate" action="{{ path('security_login') }}" method="post">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-8">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="_username" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="password_first" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="password_first" placeholder="Password"
                       name="_password" required>
            </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        <div class="form-group row">
            <div class="col-sm-8">
                <a class="btn btn-outline-secondary" href="{{ path('blog_index') }}">Cancel</a>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
    </form>

{% endblock %}