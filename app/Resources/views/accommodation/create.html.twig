{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('accommodation_create') }}"
                  method="POST">
                <fieldset>
                    <legend>Add a new accommodation</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_name">Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="accommodation_name" placeholder="Accommodation name"
                                   name="accommodation[name]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="accommodation_description">Description</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="accommodation_description"
                                  placeholder="Enter the description of your property"
                                  name="accommodation[description]"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_image">Image</label>
                        <div class="col-sm-4 ">
                            <input type="file" accept=".jpg, .png, .jpeg" class="form-control" id="accommodation_image"
                                   placeholder="Image"
                                   name="accommodation[image]">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('blog_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}