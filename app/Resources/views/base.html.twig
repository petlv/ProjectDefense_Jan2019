<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}SoftUni Blog{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('amcharts4/ammap.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>

        <script>
            setTimeout(function () {
                $('#msg').fadeOut();
            }, 3000)

        </script>
        <script>
            $(document).ready(function () {
                $(".navbar-nav .nav-link").on("click", function(){
                    $(".navbar-nav").find(".active").removeClass("active");
                    $(this).addClass("active");
                });
            });
        </script>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a href="{{ path('blog_index') }}" class="navbar-brand">ACCOMMODATIONS REVIEW</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                    aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN')  %}
                            <a class="nav-item nav-link" href="{{ path('dashboard') }}">Admin Panel</a>
                        {% endif %}
                        <a class="nav-item nav-link" href="{{ path('my_accommodations') }}">My Accommodations</a>
                        <a class="nav-item nav-link" href="{{ path('accommodation_create') }}">Create Accommodation</a>
                        {#<a class="nav-item nav-link" href="{{ path('user_mailbox') }}"><span class="fas fa-envelope fa-2x">({{ countMsg }})</span></a>#}
                        <a class="nav-item nav-link active" href="{{ path('user_profile') }}">My Profile</a>
                        <a class="nav-item nav-link" href="{{ path('security_logout') }}">Logout</a>
                    {% else %}
                        <a class="nav-item nav-link" href="{{ path('user_register') }}">REGISTER</a>
                        <a class="nav-item nav-link" href="{{ path('security_login') }}">LOGIN</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

<div class="container body-container">
    {% block body %}
        <div class="row">
            <div id="main">
                {% block main %}{% endblock %}
            </div>
        </div>
    {% endblock %}
</div>

{% block footer %}
    <footer>
        <div class="container modal-footer">
            <p>&copy; 2016 - Software University Foundation</p>
        </div>
    </footer>
{% endblock %}

</body>
</html>